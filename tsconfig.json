{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ES2022",
    "target": "ES2022",
    "jsx": "react",
    "preserveConstEnums": true,
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["es2020"],
    "types": ["node"]
  },
  "include": ["./*"],
  "exclude": ["node_modules"]
}